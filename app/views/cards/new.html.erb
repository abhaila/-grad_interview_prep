<div class="container my-3">
  <h3>Add a card</h3>
</div>

<div class="container">
  <%= simple_form_for [@deck, @card] do |f| %>

    <div class="form-inputs">
      <%= f.input :front_side,
                  required: true %>
    </div>

    <div class="form-inputs">
      <%= f.input :back_side,
                  required: true %>
    </div>

    <div class="form-actions">
      <%= f.submit "Submit", class: "btn btn-ghost" %>
    </div>

  <% end %>
</div>

