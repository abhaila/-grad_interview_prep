<div class="container my-3">
  <h3>Add a new deck</h3>
</div>

<div class="container">
  <%= simple_form_for [@user, @deck] do |f| %>

    <div class="form-inputs">
      <%= f.input :title,
                  required: true %>
    </div>

    <div class="form-inputs">
      <%= f.input :category,
                required: true,
                collection: ['Online Test', 'Interview', 'Other'] %>
    </div>

    <div class="form-actions">
      <%= f.submit "Submit", class: "btn btn-ghost" %>
    </div>

  <% end %>
</div>
