 <div class="container">
  <h3>Add a new post</h3>
 </div>

 <div class="container">
  <%= simple_form_for @post do |f| %>
    <div class="form-inputs">
      <%= f.input :title, required: true %>
    </div>

    <div class="form-inputs">
      <%= f.input :summary, required: true %>
    </div>

    <div class="form-inputs">
      <%= f.label :content, label: "Post content" %>
      <%= f.rich_text_area :content, required: true %>
    </div>

    <div class="form-inputs">
      <%= f.input :photo, label: "Post photo", as: :file %>
    </div>

    <div class="form-actions">
      <%= f.submit "Submit", class: "btn btn-ghost" %>
    </div>

  <% end %>

 </div>

